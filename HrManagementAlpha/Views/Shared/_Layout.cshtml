@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="assets/img/favicon.png">
    <title>Clean Zone</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,400italic,700,800" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Raleway:300,200,100" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700" rel="stylesheet" type="text/css">
    <link href="~/assets/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/lib/font-awesome/css/font-awesome.min.css"><!--if lt IE 9script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')-->
    <link rel="stylesheet" type="text/css" href="~/assets/lib/jquery.nanoscroller/css/nanoscroller.css">
    <link rel="stylesheet" type="text/css" href="~/assets/lib/jquery.gritter/css/jquery.gritter.css">
    <link rel="stylesheet" type="text/css" href="~/assets/lib/bootstrap.switch/css/bootstrap3/bootstrap-switch.css">
    <link rel="stylesheet" type="text/css" href="~/assets/lib/bootstrap.datetimepicker/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/lib/jquery.select2/css/select2.css">
    @*<link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" type="text/css" href="~/assets/lib/bootstrap.slider/css/bootstrap-slider.css">
    <link rel="stylesheet" type="text/css" href="~/assets/lib/intro.js/introjs.css">
    <link href="~/assets/css/opentip/opentip.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet">
    @RenderSection("HeaderContent", required: false)
</head>
<body>
    
    <div id="head-nav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle"><span class="fa fa-gear"></span></button>
                <a href="#" class="navbar-brand"><span>Clean Zone</span></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                    
                </ul>
                
                @Html.Partial("_LoginPartial")
                
            </div>
        </div>
    </div>
    <div id="cl-wrapper" class="fixed-menu">
        <!--Sidebar item function--><!--Sidebar sub-item function-->
        <div data-position="right" data-step="1" data-intro="&lt;strong&gt;Fixed Sidebar&lt;/strong&gt; &lt;br/&gt; It adjust to your needs." class="cl-sidebar">
            <div class="cl-toggle"><i class="fa fa-bars"></i></div>
            <div class="cl-navblock">
                <div class="menu-space">
                    <div class="content">

                        <ul class="cl-vnavigation">
                            <li>
                                <a href="#"><i class="fa fa-home"></i><span>Dashboard</span></a>
                                <ul class="sub-menu">
                                    <li><a href="/Home/Index">Version 1</a></li>
                                    <li>
                                        <a href="/Home/Index">Version 2</a>
                                    </li>
                                </ul>
                            </li>
                            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li>
                                    <a href="#"><i class="fa fa-smile-o"></i><span>Employee</span></a>
                                    <ul class="sub-menu">
                                        <li>@Html.ActionLink("Search Employee", "SearchEmployee", "Employee", routeValues: null, htmlAttributes: new { title = "Search Employee" })</li>
                                        
                                        <li>@Html.ActionLink("Register User", "Register", "Account", routeValues: null, htmlAttributes: new { title = "Search Employee" })</li>

                                    </ul>
                                </li>
                            }
                            
                            <li>
                                <a href="#"><i class="fa fa-list-alt"></i><span>Conveyance</span></a>
                                <ul class="sub-menu">
                                    
                                    <li>@Html.ActionLink("Create Conveyance", "CreateConveyance", "Conveyance", routeValues: null, htmlAttributes: new { title = "Create Conveyance" })</li>
                                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <li>@Html.ActionLink("Search Conveyance", "SearchConveyance", "Conveyance", routeValues: null, htmlAttributes: new { title = "Search Conveyance" })</li>
                                    }
                                    else
                                    {
                                        <li>@Html.ActionLink("Search Conveyance", "SearchConveyanceUser", "Conveyance", routeValues: null, htmlAttributes: new { title = "Search Conveyance" })</li>
                                    }
                                    @if (Request.IsAuthenticated && User.IsInRole("Finance"))
                                    {
                                        <li>@Html.ActionLink("Search Conveyance (Finanace)", "SearchConveyanceFinance", "Conveyance", routeValues: null, htmlAttributes: new { title = "Search Conveyance" })</li>
                                    }
                                    

                                </ul>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-list-alt"></i><span>Leave Manage</span></a>
                                <ul class="sub-menu">

                                    <li>@Html.ActionLink("Leave Request", "LeaveRequest", "Leave", routeValues: null, htmlAttributes: new { title = "Leave Request Submit" })</li>
                                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <li>@Html.ActionLink("Search Conveyance", "SearchConveyance", "Conveyance", routeValues: null, htmlAttributes: new { title = "Search Conveyance" })</li>
                                    }
                                    else
                                    {
                                        <li>@Html.ActionLink("Search Conveyance", "SearchConveyanceUser", "Conveyance", routeValues: null, htmlAttributes: new { title = "Search Conveyance" })</li>
                                    }
                                    @if (Request.IsAuthenticated && User.IsInRole("Finance"))
                                    {
                                        <li>@Html.ActionLink("Search Conveyance (Finanace)", "SearchConveyanceFinance", "Conveyance", routeValues: null, htmlAttributes: new { title = "Search Conveyance" })</li>
                                    }


                                </ul>
                            </li>
                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li>
                                <a href="#"><i class="fa fa-lock"></i><span>Role Manage</span></a>
                                <ul class="sub-menu">
                                    <li>@Html.ActionLink("All Roles", "Index", "Roles", routeValues: null, htmlAttributes: new { title = "All Roles" })</li>
                                    <li>@Html.ActionLink("Assign Role To Users", "AssignRoleToUsers", "Roles", routeValues: null, htmlAttributes: new { title = "Assign Role To Users" })</li>

                                </ul>
                            </li>
                        }
                        </ul>
                    </div>
                </div>
                <div class="search-field collapse-button">
                    <input type="text" placeholder="Search..." class="form-control search">
                    <button id="sidebar-collapse" class="btn btn-default"><i class="fa fa-angle-left"></i></button>
                </div>
            </div>
        </div>
        <div id="pcont" class="container-fluid">
            <div class="cl-mcont">
                <div id="PartialContent">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/assets/lib/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/assets/lib/jquery.nanoscroller/javascripts/jquery.nanoscroller.js"></script>
    <script type="text/javascript" src="~/assets/js/cleanzone.js"></script>
    <script src="~/assets/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/assets/lib/jquery.gritter/js/jquery.gritter.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/assets/lib/jquery.sparkline/jquery.sparkline.min.js"></script>
    <script type="text/javascript" src="~/assets/lib/intro.js/intro.js"></script>
    <script type="text/javascript" src="~/assets/lib/jquery.flot/jquery.flot.js"></script>
    <script type="text/javascript" src="~/assets/lib/jquery.flot/jquery.flot.pie.js"></script>
    <script type="text/javascript" src="~/assets/lib/jquery.flot/jquery.flot.resize.js"></script>
    <script type="text/javascript" src="~/assets/lib/jquery-ui/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/assets/lib/jquery.select2/js/select2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/assets/lib/bootstrap.datetimepicker/js/bootstrap-datepicker.min.js"></script>
    @*<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js"></script>*@
    <script src="~/assets/js/handle-link.js"></script>
    <script src="~/assets/lib/opentip/opentip-jquery.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            //initialize the javascript
            App.init();
            App.dashboard();

        });</script>
    @RenderSection("scripts", required: false)
</body>
</html>
